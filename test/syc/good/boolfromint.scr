mapfile "boolfromint.map";
ldbin "boolfromint.bin", 0x8000;

/* from char */

ld byte ptr (@_c), 0x00;
call @_from_c;
verify byte ptr (@_b), 0x00;

ld byte ptr (@_c), 0x01;
call @_from_c;
verify byte ptr (@_b), 0x01;

ld byte ptr (@_c), 0x80;
call @_from_c;
verify byte ptr (@_b), 0x01;

/* from int */

ld word ptr (@_i), 0x0000;
call @_from_i;
verify byte ptr (@_b), 0x00;

ld word ptr (@_i), 0x0001;
call @_from_i;
verify byte ptr (@_b), 0x01;

ld word ptr (@_i), 0x8000;
call @_from_i;
verify byte ptr (@_b), 0x01;

/* from long */

ld dword ptr (@_l), 0x00000000;
call @_from_l;
verify byte ptr (@_b), 0x00;

ld dword ptr (@_l), 0x00000001;
call @_from_l;
verify byte ptr (@_b), 0x01;

ld dword ptr (@_l), 0x80000000;
call @_from_l;
verify byte ptr (@_b), 0x01;

/* from long long */

ld qword ptr (@_ll), 0x0000000000000000;
call @_from_ll;
verify byte ptr (@_b), 0x00;

ld qword ptr (@_ll), 0x0000000000000001;
call @_from_ll;
verify byte ptr (@_b), 0x01;

ld qword ptr (@_ll), 0x8000000000000000;
call @_from_ll;
verify byte ptr (@_b), 0x01;
